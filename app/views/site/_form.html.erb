
<div class="col d-flex justify-content-center">
  <div class="card w-75" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title text-center" id="result"><%=  "#{humanized_money(@result)}" + "#{params[:convert_to] if params[:convert_to].present?}" %></h5>
    </div>
  </div>
</div>

<%= form_with url: exchange_path, local: true, method: :post do |form| %>      

    <div class="form-group">
      <%= form.label :enter_value %>
      <%= form.number_field :enter_value, step: :any, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= form.label :convert_from %> 
      <%= form.select :convert_from, @bnk_vld_crr,{ prompt: 'Choose currency...'}, {class: "form-select"} %>
    </div>
    <div class="form-group">
      <%= form.label :convert_to %> 
      <%= form.select :convert_to, @bnk_vld_crr,{prompt: 'Choose currency...'}, {class: "form-select"}  %>
    </div>
    <%= form.submit :submit, class: "btn btn-primary mt-3" %>
<% end %>

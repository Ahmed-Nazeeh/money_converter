<h1>welcome</h1>
 
<% unless user_signed_in? %>
    <%= link_to "Sign In", new_user_session_path, id: "sign_in_link" %>
    <%= link_to "Register", new_user_registration_path, id: "registration-link" %> 
<% else %>
    <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, id: "destroy_session_link" %>
    <hr />
    wwe
    <%= form_with do |form| %>
        <ul style="list-style-type:none">
            <li><%= form.label :enter_value %>
            <%= form.number_field :enter_value %></li>

            <li><%= form.label :convert_from %> 
            <%= form.select :convert_from, ["USD", "CAD"] %></li>
            
            <li><%= form.label :convert_to %> 
            <%= form.select :convert_to, ["USD", "CAD"] %></li>

            <%= form.submit :submit %>
        </ul>
    <% end %>
<% end %>



<h1>welcome</h1>
<h2>
    <% if user_signed_in? %>
        Hi <%= current_user.name %>
    <% end %>
</h2>
<%= @currencies_major %>
<% unless user_signed_in? %>
    <%= link_to "Sign In", new_user_session_path, id: "sign_in_link" %>
    <%= link_to "Register", new_user_registration_path, id: "registration-link" %> 
<% else %>
    <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, id: "destroy_session_link" %>
    <hr />
    <%= form_with url: exchange_path, local: true, method: :post do |form| %>
        <ul style="list-style-type:none">
            <li><%= form.label :enter_value %>
            <%= form.number_field :enter_value %></li>

            <li><%= form.label :convert_from %> 
            <%= form.select :convert_from, @currencies_all, prompt: 'Choose currency...' %></li>
            <li><%= form.label :convert_to %> 
            <%= form.select :convert_to, @currencies_all, prompt: 'Choose currency...' %></li>



            <%= form.submit :submit %>
        </ul>
    <% end %>
<% end %>


